# Django Settings
DJANGO_SECRET_KEY=your-secret-key-here-change-in-production
DEBUG=True
ALLOWED_HOSTS=localhost,127.0.0.1

# Network Access
# For local network access, set your computer's IP address
# Find it with: ipconfig (Windows) or ifconfig (Linux/Mac)
# Example: HOST_IP=192.168.1.100
# Leave empty or use 'localhost' for local access only
HOST_IP=localhost

# Database
POSTGRES_DB=medicine_erp
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_HOST=db
POSTGRES_PORT=5432

# Redis
REDIS_HOST=redis
REDIS_PORT=6379

# Celery
CELERY_BROKER_URL=redis://redis:6379/0
CELERY_RESULT_BACKEND=redis://redis:6379/0

# S3/MinIO
USE_S3=False
S3_ACCESS_KEY=minioadmin
S3_SECRET_KEY=minioadmin
S3_BUCKET_NAME=medicine-erp
S3_ENDPOINT_URL=http://minio:9000

# SMS Provider (Marketing Module)
SMS_PROVIDER=mock
SMS_API_KEY=
SMS_API_SECRET=
SMS_RATE_LIMIT_PER_MIN=30
SMS_PRICE_PER_SMS=15.0
ONLINE_BOOKING_URL=https://clinic.example.com/booking

# Marketing Settings
